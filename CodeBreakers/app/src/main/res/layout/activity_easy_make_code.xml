<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000"
    android:gravity="center"
    tools:context=".EasyMakeCode">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.webianks.library.scroll_choice.ScrollChoice
            android:id="@+id/sc_easyMakeCode_d1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:scroll_background_color="#000"
            app:scroll_selected_item_background="#fff"
            app:scroll_item_text_color="#000"
            app:scroll_atmospheric="true"
            app:scroll_indicator="true"
            app:scroll_indicator_color="#fff"
            app:scroll_item_align="center"
            app:scroll_selected_item_text_color="#000"/>

        <com.webianks.library.scroll_choice.ScrollChoice
            android:id="@+id/sc_easyMakeCode_d2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:scroll_background_color="#000"
            app:scroll_selected_item_background="#fff"
            app:scroll_item_text_color="#000"
            app:scroll_atmospheric="true"
            app:scroll_indicator="true"
            app:scroll_indicator_color="#fff"
            app:scroll_item_align="center"
            app:scroll_selected_item_text_color="#000"/>

        <com.webianks.library.scroll_choice.ScrollChoice
            android:id="@+id/sc_easyMakeCode_d3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:scroll_background_color="#000"
            app:scroll_selected_item_background="#fff"
            app:scroll_item_text_color="#000"
            app:scroll_atmospheric="true"
            app:scroll_indicator="true"
            app:scroll_indicator_color="#fff"
            app:scroll_item_align="center"
            app:scroll_selected_item_text_color="#000"/>

        <com.webianks.library.scroll_choice.ScrollChoice
            android:id="@+id/sc_easyMakeCode_d4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:scroll_background_color="#000"
            app:scroll_selected_item_background="#fff"
            app:scroll_item_text_color="#000"
            app:scroll_atmospheric="true"
            app:scroll_indicator="true"
            app:scroll_indicator_color="#fff"
            app:scroll_item_align="center"
            app:scroll_selected_item_text_color="#000"/>

    </LinearLayout>

    <Button
        android:layout_gravity="center"
        android:text="@string/create"
        android:onClick="easySubmitCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>