<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <Button
        android:onClick="twoPlayerGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start 2 Player Game"/>
    <Button
        android:onClick="threePlayerGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start 3 Player Game"/>
    <Button
        android:onClick="fourPlayerGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start 4 Player Game"/>
    <Button
        android:onClick="history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Game History"/>


</LinearLayout>